<div class="modal-dialog">
  <div class="modal-content">
    <div class="container-fluid">
      <div class="row">
        <main role="main" class="col-md-9 ml-sm-auto col-lg-12 px-4" style="padding-top: 24px;">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>

          <h1 class="h5">ダウンロード条件の設定</h1>

          <%= form_with url: 'do_export_counts', method: :get, local: true do |form| %>
            <div class="mb-3"></div>
            <h6>アーティスト</h6>
            <%= form.select 'artist', @artists_list %>

            <div class="mb-3"></div>

            <h6>期間</h6>

            <div class="mb-3"></div>

            <button class="btn btn-primary btn-sm" type="submit">エクスポート</button>

            <div class="mb-3"></div>
          <% end %>
        </main>
      </div>
      </div>
  </div>
</div>
