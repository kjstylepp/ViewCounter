<h1 class="h2"><%= @movie.title %>の再生数履歴</h1>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
    <tr>
      <th>取得日</th>
      <th>再生数</th>
    </tr>
    </thead>
    <tbody>
    <% @views.each do |view| %>
      <tr>
        <td><%= view.update_date %></td>
        <td><%= view.count %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= paginate @views %>
</div>
