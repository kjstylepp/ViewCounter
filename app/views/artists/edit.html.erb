<% if flash[:alert] %>
  <div class="alert alert-danger" role="alert">
    <%= flash[:alert] %>
  </div>
<% end %>

<h1 class="h2">アーティスト名更新</h1>

<%= form_with model: @artist, url: "/artists/#{@artist.id}" do |form| %>
  <div class="field">
    <%= form.text_field :name, class: 'form-control', placeholder: 'アーティスト名', required: true%>
  </div>
  <div class="checkbox mb-3">
    <label>
    </label>
  </div>
  <button class="btn btn-primary btn-sm" type="submit">更新</button>
<% end %>
